// WAKES
// -----

template spriteset_template_wake_${ship.id}(y) {
    <tal:sprite repeat="bounding_box global_constants.spritesheet_bounding_boxes">
        // take the base offsets for this ship and adjust the y offset as needed, putting the wake in the waterline position
        //[left_x,  upper_y,    width,      height,     offset_x,      offset_y]
        [${bounding_box[0]}, y, ${bounding_box[1]}, ${bounding_box[2]}, ${ship.offsets[repeat.bounding_box.index][0]}, ${ship.offsets[repeat.bounding_box.index][1]} + 2, ANIM]
    </tal:sprite>
}


